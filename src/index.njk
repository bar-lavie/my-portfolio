                    <label class="col-span-2 md:col-span-1">
                        <span class="block">Email:</span>
                        <input name="email" type="email" required="" class="mt-2 form-input w-full" :class="darkMode ? 'text-gray-900' : ''"></label>
                    <label class="col-span-2">
                        <span class="block">Message:</span>
                        <textarea name="message" rows="7" required="" class="mt-2 form-textarea w-full" :class="darkMode ? 'text-gray-900' : ''"></textarea>
                    </label>
                    <div class="col-span-2">
                        <button type="submit" class="text-sm px-4 py-3 rounded font-bold uppercase tracking-wide bg-indigo-500 text-white">Submit</button>
                    </div>
                </div>
